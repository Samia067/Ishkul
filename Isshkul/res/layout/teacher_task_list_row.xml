<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
		android:layout_margin="5dp"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@color/GreenishBlack"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/teacher_task_type_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="type : name"
            android:textColor="@color/lightBoardGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/course_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacher_task_type_name_textview"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/teacher_task_course_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="Course Number"
                android:textColor="@color/cream" />

            <TextView
                android:id="@+id/teacher_task_due_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/teacher_task_course_textview"
                android:layout_marginLeft="15dp"
                android:text="Due day"
                android:textColor="@color/cream" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>