<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TeacherTaskDetailsActivity" >

    <LinearLayout
        android:id="@+id/task_info_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/deadline_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Deadline : 20th March,2014"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/GreenishBlack"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/course_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Course : CSE 308"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/GreenishBlack"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/institution_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Institution : BUET"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/GreenishBlack"
            android:textSize="18dp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandible_task_info_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000" 
        android:layout_below="@+id/task_info_pane"/>

</RelativeLayout>
